<% content_for :body_content_title do %>
  <%= @pv_emission.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @pv_emission.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @pv_emission.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @pv_emission.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Refinery Pv Category</h1>
    <p>
      <%=raw @pv_emission.refinery_pv_category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pv_emissions">
      <% @pv_emissions.each do |pv_emission| %>
        <li>
          <%= link_to pv_emission.title, refinery.pv_emissions_pv_emission_path(pv_emission) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
