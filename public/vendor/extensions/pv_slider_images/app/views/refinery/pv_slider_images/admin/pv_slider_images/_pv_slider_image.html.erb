<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(pv_slider_image) -%>">
  <span class='title'>
    <%= translated_field(pv_slider_image, :title) %>
  </span>

  <% if Refinery::I18n.frontend_locales.many? %>
    <span class='locales'>
      <% pv_slider_image.translations.sort_by{ |t| Refinery::I18n.frontend_locales.index(t.locale)}.each do |translation| %>
        <% if translation.title.present? %>
          <%= link_to refinery.edit_pv_slider_images_admin_pv_slider_image_path(pv_slider_image, :switch_locale => translation.locale),
                      class: 'locale', title: translation.locale.upcase do %>

            <div class="<%=translation.locale %> locale_marker">
              <%= locale_text_icon(translation.locale.upcase) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </span>
  <% end %>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.pv_slider_images_pv_slider_image_path(pv_slider_image), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_pv_slider_images_admin_pv_slider_image_path(pv_slider_image), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.pv_slider_images_admin_pv_slider_image_path(pv_slider_image), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: pv_slider_image.title)}}  ) %>
  </span>
</li>
