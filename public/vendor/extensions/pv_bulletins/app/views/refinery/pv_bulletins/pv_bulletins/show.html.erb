<% content_for :body_content_title do %>
  <%= @pv_bulletin.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @pv_bulletin.title %>
    </p>
  </section>
  <section>
    <h1>Thumbnail</h1>
    <p>
      <%= image_fu @pv_bulletin.thumbnail, nil %>
    </p>
  </section>
  <section>
    <h1>Bulletin Image</h1>
    <p>
      <%= image_fu @pv_bulletin.bulletin_image, nil %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @pv_bulletin.content %>
    </p>
  </section>
  <section>
    <h1>Creation Date</h1>
    <p>
      <%=raw @pv_bulletin.creation_date %>
    </p>
  </section>
  <section>
    <h1>Status</h1>
    <p>
      <%=raw @pv_bulletin.status %>
    </p>
  </section>
  <section>
    <h1>Associated Link</h1>
    <p>
      <%=raw @pv_bulletin.associated_link %>
    </p>
  </section>
  <section>
    <h1>Refinery Pv Category</h1>
    <p>
      <%=raw @pv_bulletin.refinery_pv_category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pv_bulletins">
      <% @pv_bulletins.each do |pv_bulletin| %>
        <li>
          <%= link_to pv_bulletin.title, refinery.pv_bulletins_pv_bulletin_path(pv_bulletin) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
