<ul>
  <% if ::Refinery::PvBoardDirectors::Admin::PvBoardDirectorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pv_board_directors_admin_pv_board_directors_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pv_board_directors_admin_pv_board_director_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PvBoardDirectors::Admin::PvBoardDirectorsController.sortable? && ::Refinery::PvBoardDirectors::PvBoardDirector.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pv_board_directors_admin_pv_board_directors_path,
                     t('.reorder', what:  "Pv Board Directors"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pv_board_directors_admin_pv_board_directors_path,
                      t('.reorder_done', what: "Pv Board Directors"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
