<ul>
  <% if ::Refinery::PvCategories::Admin::PvCategoriesController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pv_categories_admin_pv_categories_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pv_categories_admin_pv_category_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PvCategories::Admin::PvCategoriesController.sortable? && ::Refinery::PvCategories::PvCategory.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pv_categories_admin_pv_categories_path,
                     t('.reorder', what:  "Pv Categories"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pv_categories_admin_pv_categories_path,
                      t('.reorder_done', what: "Pv Categories"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
