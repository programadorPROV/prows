<ul>
  <% if ::Refinery::PvStocks::Admin::PvStocksController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pv_stocks_admin_pv_stocks_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pv_stocks_admin_pv_stock_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PvStocks::Admin::PvStocksController.sortable? && ::Refinery::PvStocks::PvStock.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pv_stocks_admin_pv_stocks_path,
                     t('.reorder', what:  "Pv Stocks"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pv_stocks_admin_pv_stocks_path,
                      t('.reorder_done', what: "Pv Stocks"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
