<%= form_for [refinery, :pv_interest_links_admin, @pv_interest_link] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @pv_interest_link,
              :include_object_name => true %>

  <%= render '/refinery/admin/locale_picker',
              :current_locale => Globalize.locale %>
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link -%>
  </div>

  <div class='field'>
    <%= f.label :status -%>
    <%= f.check_box :status, :checked => @pv_interest_link[:status] -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.pv_interest_links.admin.pv_interest_links.pv_interest_link'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @pv_interest_link.title) -%>
<% end -%>
