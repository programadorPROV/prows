<% content_for :body_content_title do %>
  <%= @pv_interest_link.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @pv_interest_link.title %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @pv_interest_link.link %>
    </p>
  </section>
  <section>
    <h1>Status</h1>
    <p>
      <%=raw @pv_interest_link.status %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pv_interest_links">
      <% @pv_interest_links.each do |pv_interest_link| %>
        <li>
          <%= link_to pv_interest_link.title, refinery.pv_interest_links_pv_interest_link_path(pv_interest_link) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
