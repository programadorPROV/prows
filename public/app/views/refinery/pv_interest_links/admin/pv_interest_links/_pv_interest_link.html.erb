<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(pv_interest_link) -%>">
  <span class='title'>
    <%= translated_field(pv_interest_link, :title) %>
  </span>

  <% if Refinery::I18n.frontend_locales.many? %>
    <span class='locales'>
      <% pv_interest_link.translations.sort_by{ |t| Refinery::I18n.frontend_locales.index(t.locale)}.each do |translation| %>
        <% if translation.title.present? %>
          <%= link_to refinery.edit_pv_interest_links_admin_pv_interest_link_path(pv_interest_link, :switch_locale => translation.locale),
                      class: 'locale', title: translation.locale.upcase do %>

            <div class="<%=translation.locale %> locale_marker">
              <%= locale_text_icon(translation.locale.upcase) %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </span>
  <% end %>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.pv_interest_links_pv_interest_link_path(pv_interest_link), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_pv_interest_links_admin_pv_interest_link_path(pv_interest_link), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.pv_interest_links_admin_pv_interest_link_path(pv_interest_link), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: pv_interest_link.title)}}  ) %>
  </span>
</li>
