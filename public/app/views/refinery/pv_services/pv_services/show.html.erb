<% content_for :body_content_title do %>
  <%= @pv_service.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @pv_service.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @pv_service.description %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @pv_service.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Status</h1>
    <p>
      <%=raw @pv_service.status %>
    </p>
  </section>
  <section>
    <h1>Refinery Pv Category</h1>
    <p>
      <%=raw @pv_service.refinery_pv_category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pv_services">
      <% @pv_services.each do |pv_service| %>
        <li>
          <%= link_to pv_service.title, refinery.pv_services_pv_service_path(pv_service) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
