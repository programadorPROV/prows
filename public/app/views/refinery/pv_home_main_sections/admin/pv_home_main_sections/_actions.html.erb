<ul>
  <% if ::Refinery::PvHomeMainSections::Admin::PvHomeMainSectionsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pv_home_main_sections_admin_pv_home_main_sections_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pv_home_main_sections_admin_pv_home_main_section_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::PvHomeMainSections::Admin::PvHomeMainSectionsController.sortable? && ::Refinery::PvHomeMainSections::PvHomeMainSection.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pv_home_main_sections_admin_pv_home_main_sections_path,
                     t('.reorder', what:  "Pv Home Main Sections"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pv_home_main_sections_admin_pv_home_main_sections_path,
                      t('.reorder_done', what: "Pv Home Main Sections"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
