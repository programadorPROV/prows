<% content_for :body_content_title do %>
  <%= @pv_document.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @pv_document.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @pv_document.description %>
    </p>
  </section>
  <section>
    <h1>Status</h1>
    <p>
      <%=raw @pv_document.status %>
    </p>
  </section>
  <section>
    <h1>Creation Date</h1>
    <p>
      <%=raw @pv_document.creation_date %>
    </p>
  </section>
  <section>
    <h1>File Url</h1>
    <p>
      <% if @pv_document.file_url.present? %>
        <%= link_to 'file_url', @pv_document.file_url.url %>
      <% else %>
        file_url
      <% end %>
    </p>
  </section>
  <section>
    <h1>Refinery Pv Category</h1>
    <p>
      <%=raw @pv_document.refinery_pv_category_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="pv_documents">
      <% @pv_documents.each do |pv_document| %>
        <li>
          <%= link_to pv_document.title, refinery.pv_documents_pv_document_path(pv_document) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
