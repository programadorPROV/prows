
<%Refinery::Page.where(:parent_id => @page.id).order('id ASC').each do |bolsa|%>
	<%children = Refinery::Page.where(:parent_id => bolsa.id)%>
	<div class="column_1 g_s1024_33p mar_tb_3 pad_lr_3_1024_st">
		<div class="relative pad_l_15r_700_st pad_l_0_1024_st block_divs">
			<!-- title -->
			<%= link_to  bolsa.title, bolsa.url, :class=>"pad_b_1_240_st pad_l_2_700_st pad_l_0_1024_st fs_15 c_green_2 bolder"%>
			<!-- image -->
			<%if bolsa.images.present?%>
				<%= link_to "", children.first.url, :class=>"h10_240_st h10_1024_st h100p_700_st absolute_tl_700_st relative_1024_st w15_700_st w100p_1024_st bck_cover", style: "background-image: url('#{bolsa.images.first.url}')"%>
			<%else%>
				<%= link_to "", children.first.url, :class=>"h10_240_st h10_1024_st h100p_700_st bck_gray2 absolute_tl_700_st relative_1024_st w15_700_st w100p_1024_st bck_cover"%>
			<%end%>

			<div class="row_lm">
				<div>
					<ul class="list_pro">
						<!-- body text -->
						<%children.order('id ASC').each do |descrip|%>
			
						<li class="pad_l_1">
							<%= link_to descrip.title, descrip.url, :style=>"color: gray;"%>
						</li>
						<%end%>
					</ul>
				</div>
			</div>
		</div>
	</div>
<%end%>