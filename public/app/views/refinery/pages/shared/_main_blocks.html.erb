								<%= link_to block.description.html_safe, (block.link || ""), :class=> "pad_t_1_240_st pad_l_2_700_st pad_l_0_1024_st pad_t_2_1024_st body_text_2"%>
							</div>
						</div>
					<%end%>
				<%end%>
			</div>
		</div>
	</div>
</div>